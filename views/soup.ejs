<h1><%= soup.name %></h1>
<hr>
<div class="bg-light m-5 p-2 border border-primary border-2">

    <div class ="p-3 m-3 border border-primary bg-light">
        <strong>Season</strong>: <%= soup.season %>
        <br>
        <strong>Soup Ratings</strong>: <%= soup.score %>/5
        <br>
        <strong>Vegetarian?</strong> <%= soup.vegetarian %>
        <br>
        <strong>Vegan?</strong> <%= soup.vegan %>
    </div>
    <br>

    <div class="p-3">
        <strong>Description:</strong>
        <br><br>
        <%=soup.description %>
    </div>
    <br>

    <div class="p-3">
        <strong>Ingredients</strong>
        <br><br>
        <ol>
            <% for (const ingredient in soup.ingredients) { %>
                <li>
                    <%= ingredient %>
                </li>
            <% } %>
        </ol>
    </div>

    <div class="p-3">
        <strong>Recipe</strong>
        <br><br>
        <ol>
            <% for (const number in soup.recipe) { %>
                <li>
                    <%= soup.recipe[number] %><br><br>
                </li>
            <% } %>
        </ol>
    </div>

    <div><a href="/addSoup/<%= soup['_id'] %>">Add to Favorite Soups</a></div>

</div>